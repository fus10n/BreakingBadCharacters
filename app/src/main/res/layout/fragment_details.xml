<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/character_detail_inner_margin"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/character_detail_image"
            android:layout_width="@dimen/character_detail_image_width"
            android:layout_height="@dimen/character_detail_image_height"
            android:layout_marginBottom="@dimen/character_detail_inner_margin"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/character_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/character_detail_text_margin_vertical"
            android:gravity="center"
            android:textSize="@dimen/character_detail_name_textSize"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/character_detail_occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/character_detail_text_margin_vertical"
            android:gravity="center"
            android:textSize="@dimen/character_detail_other_textSize"/>

        <TextView
            android:id="@+id/character_detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/character_detail_text_margin_vertical"
            android:gravity="center"
            android:textSize="@dimen/character_detail_other_textSize"/>

        <TextView
            android:id="@+id/character_detail_seasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/character_detail_text_margin_vertical"
            android:gravity="center"
            android:textSize="@dimen/character_detail_other_textSize"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>